<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LalaHealthCare.App.Pages.WebPortalPage"
             Title="Web Portal"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="130,*,60">
        <!-- Header CareNote360 -->
        <Grid Grid.Row="0" BackgroundColor="#3BAFBF">
            <StackLayout Padding="20,0" VerticalOptions="End" Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Side: Logo and User Info -->
                    <StackLayout Grid.Column="0" Spacing="5">
                        <Image Source="carenotes360_white.png" 
                               WidthRequest="200" 
                               HeightRequest="40"
                               HorizontalOptions="Start"/>
                        <Label Text="Good Morning Nurse" 
                               TextColor="White" 
                               FontSize="14"
                               Margin="10,0,0,0"/>
                        <Label Text="{Binding UserFullName}" 
                               TextColor="White" 
                               FontSize="12"
                               Margin="10,0,0,0"/>
                    </StackLayout>

                    <!-- Right Side: Avatar and Actions -->
                    <HorizontalStackLayout Grid.Column="1" 
                                         Spacing="10" 
                                         VerticalOptions="Center">
                        <!-- Avatar -->
                        <Border StrokeThickness="0"
                                WidthRequest="50" 
                                HeightRequest="50"
                                BackgroundColor="White">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="25"/>
                            </Border.StrokeShape>
                            <Grid>
                                <!-- Default Person Icon -->
                                <Label Text="&#xE853;" 
                                       FontFamily="Material"
                                       FontSize="30"
                                       TextColor="#3BAFBF"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       IsVisible="{Binding ShowDefaultAvatar}"/>
                                <!-- User Image (if available) -->
                                <Image Source="{Binding UserProfilePictureUrl}" 
                                       IsVisible="{Binding ShowUserImage}"/>
                            </Grid>
                        </Border>

                        <ImageButton Source="exit.png"
                                     WidthRequest="28"
                                     HeightRequest="28"
                                     BackgroundColor="Transparent"
                                     Command="{Binding CloseCommand}"/>
                    </HorizontalStackLayout>
                </Grid>
            </StackLayout>
        </Grid>

        <!-- WebView Content -->
        <Grid Grid.Row="1">
            <WebView x:Name="webView"
                     Source="{Binding WebViewSource}"
                     Navigating="OnWebViewNavigating"
                     Navigated="OnWebViewNavigated" />

            <!-- Loading indicator -->
            <Grid IsVisible="{Binding IsLoading}"
                  BackgroundColor="#80000000">
                <Border BackgroundColor="White"
                        StrokeThickness="0"
                        Padding="30"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="Black"
                                Offset="0,2"
                                Radius="5"
                                Opacity="0.3"/>
                    </Border.Shadow>
                    <StackLayout Spacing="20">
                        <ActivityIndicator IsRunning="{Binding IsLoading}"
                                         Color="#3BAFBF"
                                         WidthRequest="50"
                                         HeightRequest="50"/>
                        <Label Text="Loading Portal..."
                               TextColor="#333"
                               FontSize="16"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </Border>
            </Grid>
        </Grid>

        <!-- Bottom Navigation -->
        <Grid Grid.Row="2" BackgroundColor="White">
            <BoxView HeightRequest="1" 
                     Color="#E0E0E0" 
                     VerticalOptions="Start"/>

            <Grid Padding="5" ColumnSpacing="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Home Button -->
                <StackLayout Grid.Column="0" 
                           Spacing="2"
                           VerticalOptions="Center">
                    <ImageButton Source="home.png"
                                 WidthRequest="24"
                                 HeightRequest="24"
                                 BackgroundColor="Transparent"
                                 Command="{Binding HomeCommand}"/>
                </StackLayout>

                <!-- Web Portal Button (Current - Highlighted) -->
                <StackLayout Grid.Column="1" 
                           Spacing="2"
                           VerticalOptions="Center">
                    <Border BackgroundColor="#E8F5F7"
                            StrokeThickness="0"
                            Padding="8,6"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <ImageButton Source="world.png"
                                     WidthRequest="24"
                                     HeightRequest="24"
                                     BackgroundColor="Transparent"/>
                    </Border>
                </StackLayout>

                <!-- Phone Button -->
                <StackLayout Grid.Column="2" 
                           Spacing="2"
                           VerticalOptions="Center">
                    <ImageButton Source="phone.png"
                                 WidthRequest="24"
                                 HeightRequest="24"
                                 BackgroundColor="Transparent"
                                 Command="{Binding PhoneCommand}"/>
                </StackLayout>

                <!-- Panic Button -->
                <StackLayout Grid.Column="3" 
                           Spacing="2"
                           VerticalOptions="Center">
                    <ImageButton Source="alert.png"
                                 WidthRequest="24"
                                 HeightRequest="24"
                                 BackgroundColor="Transparent"
                                 Command="{Binding PanicCommand}"/>
                </StackLayout>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>